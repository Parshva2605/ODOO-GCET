<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Budgets - Budget Accounting System</title>
  
  <!-- Bootstrap 5.3.2 CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  
  <!-- Font Awesome 6.5.0 CDN -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  
  <!-- Custom CSS -->
  <link href="css/styles.css" rel="stylesheet">
  <link href="css/dashboard.css" rel="stylesheet">
</head>
<body>
  
  <!-- Mobile Menu Button -->
  <button class="mobile-menu-btn" id="mobileMenuBtn">
    <i class="fas fa-bars"></i>
  </button>
  
  <!-- LEFT SIDEBAR -->
  <div class="sidebar" id="sidebar">
    
    <!-- Sidebar Header -->
    <div class="sidebar-header">
      <h4 class="text-white">Shiv Furniture</h4>
      <p class="text-white-50 small">Budget System</p>
    </div>
    
    <!-- User Info Section -->
    <div class="user-info">
      <i class="fas fa-user-circle fa-2x"></i>
      <div>
        <div id="userName">Loading...</div>
        <div id="userEmail" class="small">email</div>
      </div>
    </div>
    
    <!-- Navigation Menu -->
    <nav class="sidebar-nav">
      <ul class="nav flex-column">
        <li class="nav-item">
          <a class="nav-link" href="dashboard.html">
            <i class="fas fa-home"></i>
            <span>Dashboard</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="contacts.html">
            <i class="fas fa-address-book"></i>
            <span>Contacts</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="products.html">
            <i class="fas fa-box"></i>
            <span>Products</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="analytical-accounts.html">
            <i class="fas fa-chart-pie"></i>
            <span>Analytical Accounts</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="auto-analytical-model.html">
            <i class="fas fa-magic"></i>
            <span>Auto Analytical Model</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" href="budgets.html">
            <i class="fas fa-calculator"></i>
            <span>Budgets</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="purchase-orders.html">
            <i class="fas fa-shopping-cart"></i>
            <span>Purchase Orders</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="reports.html">
            <i class="fas fa-chart-line"></i>
            <span>Reports</span>
          </a>
        </li>
      </ul>
    </nav>
    
    <!-- Logout Button -->
    <div class="sidebar-footer">
      <button class="btn btn-outline-light btn-sm w-100" id="logoutBtn">
        <i class="fas fa-sign-out-alt"></i>
        <span>Logout</span>
      </button>
    </div>
    
  </div>
  
  <!-- MAIN CONTENT -->
  <div class="main-content">
    
    <!-- Header -->
    <div class="content-header">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <h1 class="h3 mb-0">Budgets</h1>
          <p class="text-muted">Manage budget planning and tracking</p>
        </div>
      </div>
    </div>
    
    <!-- Message Box -->
    <div id="messageBox" class="message-box" style="display: none;"></div>
    
    <!-- Budget Tabs -->
    <div class="card">
      <div class="card-header">
        <ul class="nav nav-tabs" id="budgetTabs">
          <li class="nav-item">
            <a class="nav-link active" href="#" data-tab="draft">Draft Budgets</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#" data-tab="confirmed">Confirmed Budgets</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#" data-tab="revised">Revised Budgets</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#" data-tab="new">New Budget</a>
          </li>
        </ul>
      </div>
      
      <div class="card-body">
        
        <!-- Budget List View -->
        <div id="budgetListView">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Start Date</th>
                  <th>End Date</th>
                  <th>Status</th>
                  <th>Amount</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody id="budgetListBody">
                <tr>
                  <td colspan="6" class="text-center">
                    <div class="spinner-border text-primary" role="status">
                      <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2 mb-0">Loading budgets...</p>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
        
        <!-- Budget Form -->
        <div id="budgetForm" style="display: none;">
          <form>
            <div class="row mb-3">
              <div class="col-md-6">
                <label for="budgetName" class="form-label">Budget Name</label>
                <input type="text" class="form-control" id="budgetName" required>
                <input type="hidden" id="budgetId">
              </div>
              <div class="col-md-3">
                <label for="startDate" class="form-label">Start Date</label>
                <input type="date" class="form-control" id="startDate" required>
              </div>
              <div class="col-md-3">
                <label for="endDate" class="form-label">End Date</label>
                <input type="date" class="form-control" id="endDate" required>
              </div>
            </div>
            
            <div class="row mb-3">
              <div class="col-md-6">
                <label for="budgetStatus" class="form-label">Status</label>
                <select class="form-select" id="budgetStatus">
                  <option value="draft">Draft</option>
                  <option value="confirmed">Confirmed</option>
                  <option value="revised">Revised</option>
                  <option value="archived">Archived</option>
                </select>
              </div>
            </div>
            
            <!-- Budget Lines -->
            <div class="border-top pt-3">
              <div class="d-flex justify-content-between align-items-center mb-3">
                <h6>Budget Lines</h6>
                <button type="button" class="btn btn-sm btn-outline-primary" onclick="addBudgetLine()">
                  <i class="fas fa-plus"></i> Add Line
                </button>
              </div>
              
              <div class="table-responsive">
                <table class="table table-sm">
                  <thead>
                    <tr>
                      <th>Analytical Account</th>
                      <th>Type</th>
                      <th>Planned Amount</th>
                      <th>Achieved Amount</th>
                      <th>Achieved %</th>
                      <th>To Achieve</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody id="budgetLinesBody">
                    <!-- Lines will be added here -->
                  </tbody>
                </table>
              </div>
            </div>
            
            <div class="mt-3">
              <button type="submit" class="btn btn-primary">Save Budget</button>
              <button type="button" class="btn btn-secondary" onclick="cancelBudgetForm()">Cancel</button>
            </div>
          </form>
        </div>
        
      </div>
    </div>
    
  </div>
  
  <!-- Bootstrap 5.3.2 JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  
  <!-- Custom JavaScript -->
  <script src="js/auth.js"></script>
  <script src="js/budgets.js"></script>
  
</body>
</html>